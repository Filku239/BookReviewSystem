@page
@model BookSystemRazor.Pages.MainModel

<div class="top-panel">
    <h2 class="panel-heading">Book List</h2>
</div>

@if (Model.Books.Count == 0)
{
    <p class="no-books-message">No books to display.</p>
}
else
{
    <ul class="book-list">
        @foreach (var book in Model.Books)
        {
            <li class="book-item">
                @if (book.ImageUrl is null)
                {
                    <div class="book-image-placeholder">
                        Cover
                    </div>
                }
                else 
                {
                    <div class="book-image-placeholder"> 
                        <img src="@book.ImageUrl" alt="Cover for @book.Title"> </div>
                }
                <div class="book-details">
                    <strong class="book-title">@book.Title</strong> – <span class="book-author">@book.Author</span>
                     <div>
                        <span class="book-release-year">Release Year: @book.ReleaseYear</span>
                        <p class="book-description">@book.Description</p>
                    </div>
                </div>
            </li>
        }
    </ul>
}

<style>
  body {
