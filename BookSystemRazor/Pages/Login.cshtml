@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="login-container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="input-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="input-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="login-button">Login</button>
    </form>
</div>

<style>
    body {
        font-family: 'Merriweather', serif;
        background-color: #f2f2f2;
        color: #4a4a4a;
        margin: 0;
        padding: 0;
    }

    .login-container {
        max-width: 500px;
        margin: 60px auto;
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 28px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 14px;
    }

    .input-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

    .text-danger {
        color: #d9534f;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .login-button {
        background-color: #5a4e3c;
        color: #fff;
        border: none;
        padding: 12px;
        width: 100%;
        font-size: 15px;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .login-button:hover {
        background-color: #4a3f32;
    }
</style>
