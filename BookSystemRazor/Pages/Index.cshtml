@page
@model BookSystemRazor.Pages.IndexModel

<section class="welcome-hero">
    <div class="welcome-content-wrapper">
        <h1 class="welcome-headline">WELCOME TO OUR LITTLE LIBRARY!</h1>
        <p class="welcome-intro-text">
            Immerse yourself in the world of literature. Discover a wealth of knowledge and emotions.
        </p>

        <div class="statistics-grid">
            <div class="statistic-card">
                <i class="icon-book">üìö</i>
                <div class="statistic-number">@Model.bookCount</div>
                <div class="statistic-label">books</div>
            </div>
            <div class="statistic-card">
                <i class="icon-genre">üìñ</i>
                <div class="statistic-number">@Model.genreCount</div>
                <div class="statistic-label">genres</div>
            </div>
            <div class="statistic-card">
                <i class="icon-user">üë•</i>
                <div class="statistic-number">@Model.userCount</div>
                <div class="statistic-label">trusted users</div>
            </div>
            <div class="statistic-card">
                <i class="icon-review">‚≠ê</i>
                <div class="statistic-number">@Model.opinionCount</div>
                <div class="statistic-label">reviews submitted</div>
            </div>
        </div>

        <p class="welcome-outro-text">
            Join our community and share your love for reading.
        </p>
    </div>
</section>

<style>
    body {
    font-family: 'Merriweather', serif;
    color: #4a4a4a;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

main {
    flex: 1;
}

a {
    color: #5d7e8a;
    text-decoration: none;
}

a:hover {
    color: #43636e;
    text-decoration: underline;
}

.welcome-hero {
    background-color: #e0e0e0;
    background-image: linear-gradient(135deg, #e8e8e8 0%, #dcdcdc 100%);
    padding: 60px 20px;
    margin-top: 20px;
    margin-bottom: 40px;
    border-radius: 15px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    text-align: center;
    border: 1px solid #c8c8c8;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    overflow: hidden;
    animation: fadeIn 1s ease-out;
}

.welcome-content-wrapper {
    position: relative;
    z-index: 1;
}

.welcome-headline {
    font-family: 'Playfair Display', serif;
    font-weight: 900;
    color: #2c3e50;
    font-size: 3.8em;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
}

.welcome-intro-text,
.welcome-outro-text {
    font-family: 'Merriweather', serif;
    color: #5d7e8a;
    font-size: 1.4em;
    margin-bottom: 35px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    font-style: italic;
}

.welcome-outro-text {
    margin-top: 35px;
    margin-bottom: 0;
    font-weight: 400;
}

.statistics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 25px;
    margin-top: 40px;
    margin-bottom: 40px;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
}

.statistic-card {
    background-color: #ffffff;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 160px;
    border: 1px solid #e0e0e0;
}

.statistic-card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
}

.icon-book,
.icon-genre,
.icon-user,
.icon-review {
    font-size: 3em;
    margin-bottom: 10px;
    line-height: 1;
}

.statistic-number {
    font-family: 'Playfair Display', serif;
    font-weight: 900;
    font-size: 3.5em;
    color: #b05c3c;
    margin-bottom: 5px;
    line-height: 1;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.05);
}

.statistic-label {
    font-family: 'Merriweather', serif;
    font-weight: 700;
    font-size: 1.1em;
    color: #6a6a6a;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

@@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@@media (max-width: 992px) {
    .welcome-headline {
        font-size: 3em;
    }
    .welcome-intro-text,
    .welcome-outro-text {
        font-size: 1.2em;
    }
    .statistics-grid {
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
    }
    .statistic-number {
        font-size: 3em;
    }
    .icon-book, .icon-genre, .icon-user, .icon-review {
        font-size: 2.5em;
    }
}

@@media (max-width: 768px) {
    .welcome-headline {
        font-size: 2.5em;
        letter-spacing: 1.5px;
    }
    .welcome-intro-text,
    .welcome-outro-text {
        font-size: 1.1em;
    }
    .welcome-hero {
        padding: 40px 15px;
    }
    .statistics-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
    }
    .statistic-number {
        font-size: 2.8em;
    }
    .icon-book, .icon-genre, .icon-user, .icon-review {
        font-size: 2.2em;
    }
}

@@media (max-width: 576px) {
    .welcome-headline {
        font-size: 2em;
        letter-spacing: 1px;
    }
    .welcome-intro-text,
    .welcome-outro-text {
        font-size: 1em;
    }
    .statistic-number {
        font-size: 2.5em;
    }
    .icon-book, .icon-genre, .icon-user, .icon-review {
        font-size: 2em;
    }
    .statistics-grid {
        grid-template-columns: 1fr;
        gap: 10px;
    }
    .statistic-card {
        padding: 20px;
    }
}
</style>